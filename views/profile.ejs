<!DOCTYPE html>
<html lang="en">

<head>
    <!--Meta Tags-->
    <meta charset="UTF-8">
    <meta name="keywords" content="HTML, CSS">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <!--Link to kit's Code for Icons-->
    <script src="https://kit.fontawesome.com/e56d36b0a0.js" crossorigin="anonymous"></script>
    <!--Title of Page-->
    <title>CovidConnect | Profile</title>

    <!--Favicon/icon in browser tab-->
    <link rel="icon" href="/img/favicon.png">

    <!--Link to CSS-->
    <link rel="stylesheet" href="/css/profile.css">

</head>

<body>
    <script>
        window.onload = function() {
            if (!window.location.hash) {
                window.location = window.location + '#loaded';
                window.location.reload();
            }
        }
    </script>
    <!--Heading-->
    <div class="header" style="margin-bottom:0">
        <a class="navbar-brand" href="/"><img class="logo" src="/img/logo.png" alt="logo"></a>
    </div>

    <!--Navigation Bar-->
    <nav class="navbar navbar-expand-md bg-dark navbar-dark sticky-top">
        <!-- Brand -->
        <a class="navbar-brand" href="/"><i class="fab fa-canadian-maple-leaf"></i>CovidConnect</a>
  
        <!-- Toggler/collapsibe Button -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>
  
        <!-- Navbar links -->
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/profile"><i class="fas fa-address-card"></i> Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/patientMessaging"><i class="fas fa-stethoscope"></i> Contact Your Doctor</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/locations"><i class="fas fa-location-arrow"></i> Tracking</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/symptoms"><i class="fas fa-bacterium"></i> Symptoms</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/patientAppointment"><i class="fas fa-calendar-check"></i> Appointments</a>
                </li>
            </ul>
  
            <ul class="navbar-nav ml-auto">
  
  
  
                <!-- Dropdown -->
  
  
                <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                </li>
  
  
            </ul>
        </div>
  
    </nav>



    <div class="content">
        <h1 class="title"><i class="fa fa-user-circle fa-2x"></i><br>
        <%= user.name %> <%= user.lastname %>
        </h1>

        <div class="form">
            <!--<a href="/symptoms" class="symptom-button">Update Your Symptoms</a>-->

            <form>

                <ul class="list-group list-group-flush">

                  <li class="list-group-item" style="border-bottom: 2px solid lightgrey;">
                        <label for="inputEmail4" class="form-label"><b>Name</b></label>
                        <p > <%= user.name %> <%= user.lastname %></p>
                  </li>

                  <li class="list-group-item" style="border-bottom: 2px solid lightgrey;">
                         <label for="inputEmail4" class="form-label"><b>Email</b></label>
                         <p > <%= user.email %> </p>

                  </li>
                  <li class="list-group-item" style="border-bottom: 2px solid lightgrey;">
                         <label for="inputAddress" class="form-label"><b>Address</b></label>
                         <p><%= address.street_name %> </p>
                  </li>
                  <li class="list-group-item" style="border-bottom: 2px solid lightgrey;">
                        <label for="inputAddress2" class="form-label"><b>Address 2</b></label>
                        <p>appt. <%= address.apartment_number %> </p>

                  </li>
                  <li class="list-group-item" style="border-bottom: 2px solid lightgrey;">
                        <label for="inputCity" class="form-label"><b>City</b></label>
                        <p> <%= address.city %></p>

                  </li>
                  <li class="list-group-item" style="border-bottom: 2px solid lightgrey;">
                         <label for="inputState" class="form-label"> <b>Province/Territory</b></label>
                         <p><%= address.province %></p>

                  </li>
                  <li class="list-group-item" style="border-bottom: 2px solid lightgrey;">
                         <label for="inputZip" class="form-label"><b>Zip</b></label>
                         <p><%= address.zip %></p>
                  </li>

                  <li class="list-group-item" style="border-bottom: none;">
                         <label for="inputEmail4" class="form-label"><b>Covid Status</b></label>

                       <!--  <ul class="list-group">-->
                            <% if(patient.covid==1){ %>
                            <li class="list-group-item list-group-item-danger" style="text-align: center;">POSITIVE</li>

                            <% } else if (patient.covid==0) { %>
                            <li class="list-group-item list-group-item-success" style="text-align: center;">NEGATIVE</li>
                            <% } %>

                      <!--   </ul>-->

                  </li>

                </ul>


               <a href="profile/edit" class="editing"><i class="fas fa-marker"></i> Edit Profile</a>


            </form>



        </div>

    </div>


    <!--Footer Bar-->
    <!--Footer-->
    <div class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-3"><i class="fas fa-calendar-alt"></i> Stay Informed</div>
                <div class="col-sm-3"><i class="fas fa-phone"></i> (514) 123-456</div>
                <div class="col-sm-3"><i class="fas fa-envelope-square"></i> inquiries@covidconnect.ca</div>
                <div class="col-sm-3"><i class="fab fa-facebook"></i> @CovidConnect</div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>


</body>

</html>