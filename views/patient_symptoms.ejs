            <h3 style="padding-top: 9%; margin-left:2.5%;">History of Symptom(s)</h3>
            <div class="history">
                        <table>
                            <tr>
                                <th style="width:45%"><h5>Symptom</h5></th>
                                <th style="width:55%"><h5>Date</h5></th>
                            </tr>
                            <tr>
                            <td>
                                <% for(let i = 0; i < symptoms.length; i++ ){ %>
                                    <p>
                                        <%= symptoms[i].symptom%> <br>
                                    </p> <% } %>
                                </td>
                                <td>
                                                
                                <% for(let j = 0; j < symptoms.length; j++ ){ %>
                                    <p>
                                        <%= symptoms[j].datetime%><br>
                                    </p> <% } %>
                                </td>

                            </tr>
                        </table>


                    </div>

