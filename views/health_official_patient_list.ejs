    <a href="/statistics"><i class="fas fa-chart-bar"></i> Statistics</a>
    <a href="/expose"><i class = "fas fa-virus" ></i> Exposed Patients</a>
    <div>
        <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
      </div>
